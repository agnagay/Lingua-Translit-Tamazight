<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE translit SYSTEM "translit.dtd">


<!--
  
  Transliteration definitions for XXX.

  Copyright 200x ... <...>

-->


<translit>

  <name></name>
  <desc></desc>
  <reverse></reverse>

  <!-- set of transliteration rules -->

  <rules>

    <rule>
      <from>X</from>
      <to>Y</to>
    </rule>

  <!-- the context may be specified as 
       'after' or 'before' or both (= bewtween) -->
    <rule>
      <from>A</from>
      <to>B</to>
      <context>
	  <after>x</after>
	  <before>y</before>
    </rule>

  </rules>
  
</translit>

